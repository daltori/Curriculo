<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clipToPadding="false"
    android:background="#ffff"
    tools:context=".MainActivity"
    android:gravity="center"



    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="152dp"
                android:layout_height="177dp"

                android:layout_marginTop="20dp"
                android:background="#ffffff"
                android:contentDescription="@string/descripcion_me"
                android:elevation="8dp"
                app:srcCompat="@drawable/david_torres_1" />

            <com.codesgood.views.JustifiedTextView
                android:id="@+id/textView"
                android:layout_width="317dp"
                android:layout_height="242dp"
                android:layout_marginVertical="20dp"
                android:layout_marginTop="10dp"

                android:fontFamily="casual"
                android:text="@string/txt_view"
                android:textColor="#576887" />

            <RelativeLayout
                android:layout_width="400dp"
                android:layout_height="124dp"
                android:background="#ffffff"
                android:elevation="0dp"
                >

                <Button
                    android:id="@+id/button"
                    android:layout_width="135dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="40dp"
                    android:layout_marginRight="40dp"
                    android:background="@color/white"
                    android:backgroundTint="#1ABC9C"
                    android:elevation="8dp"
                    android:onClick="Siguiente"
                    android:text="Estudios"
                    app:backgroundTint="#1ABC9C" />

                <Button
                    android:id="@+id/button2"

                    android:layout_width="135dp"

                    android:layout_height="wrap_content"
                    android:layout_marginEnd="45dp"
                    android:layout_marginRight="45dp"
                    android:layout_toStartOf="@+id/button"
                    android:layout_toLeftOf="@+id/button"

                    android:background="@color/white"
                    android:backgroundTint="#1ABC9C"
                    android:elevation="8dp"
                    android:onClick="Siguiente2"
                    android:text="Contacto"
                    app:backgroundTint="#1ABC9C" />


            </RelativeLayout>

            <TextView
                android:layout_width="265dp"
                android:layout_height="55dp"
                android:layout_marginTop="10dp"
                android:text="Conocimientos en:"
                android:textColor="#FFFFFF"

                android:textSize="26sp" />

            <ImageView
                android:layout_width="203dp"
                android:layout_height="130dp"
                android:background="@drawable/python" />

            <ImageView
                android:layout_width="209dp"
                android:layout_height="130dp"
                android:background="@drawable/java" />

            <ImageView
                android:layout_width="200dp"
                android:layout_height="130dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/cchar" />

            <ImageView
                android:layout_width="194dp"
                android:layout_height="130dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/android" />


        </LinearLayout>

    </ScrollView>


</LinearLayout>